{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"problemMatcher": [
				"$tslint5"
			],
			"group": "build",
			"label": "npm: build",
			"detail": "react-scripts build"
		},
		{
			"type": "npm",
			"script": "start",
			"label": "npm run start",
			"isBackground": true,
			"problemMatcher": {
					"owner": "javascript",
					"fileLocation": [
							"relative",
							"${workspaceFolder}"
					],
					"pattern": [
							{
									"regexp": "^(\\.[^\\s].*)$",
									"file": 1
							},
							{
									"regexp": "^\\s+Line\\s+(\\d+):(\\d+):\\s*(.*)$",
									"line": 1,
									"column": 2,
									"message": 3,
									"loop": true
							}
					],
					"background": {
							"activeOnStart": true,
							"beginsPattern": "^Compiling...",
							"endsPattern": "^Compiled |^Failed to compile"
					}
			},
			"group": {
					"kind": "build",
					"isDefault": true
			}
		}
	]
}